{
  "manifest_version": 3,
  "name": "ResumeHub",
  "version": "1.0",
  "description": "Generates a tailored resume based on the current job description.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo.svg",
      "48": "assets/logo.svg",
      "128": "assets/logo.svg"
    }
  },
  "icons": {
    "16": "assets/logo.svg",
    "48": "assets/logo.svg",
    "128": "assets/logo.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
} 